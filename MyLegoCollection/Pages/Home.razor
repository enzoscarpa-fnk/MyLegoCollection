@page "/"
@inject NavigationManager Navigation

<PageTitle>My LEGO Collection</PageTitle>

<h1>Welcome to My LEGO Collection</h1>

<h4>What you can do with this service:</h4>

<br/>
<p>Discover new LEGO sets</p>
<button class="btn btn-primary" @onclick="GoToLegoSets">Discover</button><br/>

<br/>
<p>Search for LEGO sets</p>
<button class="btn btn-primary" @onclick="GoToSearch">Search</button><br/>

<br/>
<p>Manage my LEGO collection</p>
<button class="btn btn-primary" @onclick="GoToCollection">Manage</button><br/>

@code {
    private void GoToLegoSets()
    {
        Navigation.NavigateTo("/lego-sets");
    }
    
    private void GoToSearch()
    {
        Navigation.NavigateTo("/search");
    }
    
    private void GoToCollection()
    {
        Navigation.NavigateTo("/collections");
    }
}